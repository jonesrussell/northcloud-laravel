{
    "name": "jonesrussell/northcloud-laravel",
    "version": "0.6.0",
    "description": "Shared article ingestion pipeline for North Cloud-connected Laravel sites",
    "type": "library",
    "license": "MIT",
    "require": {
        "php": "^8.4",
        "ext-json": "*",
        "ext-pcntl": "*",
        "ext-redis": "*",
        "illuminate/console": "^12.0",
        "illuminate/database": "^12.0",
        "illuminate/events": "^12.0",
        "illuminate/support": "^12.0",
        "sendgrid/sendgrid": "^8.0"
    },
    "require-dev": {
        "inertiajs/inertia-laravel": "^2.0",
        "laravel/pint": "^1.24",
        "orchestra/testbench": "^10.0",
        "pestphp/pest": "^4.0",
        "pestphp/pest-plugin-laravel": "^4.0"
    },
    "autoload": {
        "psr-4": {
            "JonesRussell\\NorthCloud\\": "src/",
            "JonesRussell\\NorthCloud\\Database\\Factories\\": "database/factories/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "JonesRussell\\NorthCloud\\Tests\\": "tests/"
        }
    },
    "extra": {
        "laravel": {
            "providers": [
                "JonesRussell\\NorthCloud\\NorthCloudServiceProvider"
            ],
            "aliases": {
                "NorthCloud": "JonesRussell\\NorthCloud\\Facades\\NorthCloud"
            }
        }
    },
    "config": {
        "sort-packages": true,
        "allow-plugins": {
            "pestphp/pest-plugin": true
        }
    },
    "minimum-stability": "stable",
    "prefer-stable": true
}
